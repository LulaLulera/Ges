<div class="row index-box">
  <p id="notice text" style="text-align: center;"><%= notice %></p>
  <div class="col-md-12">
    <h1 class="row center-xs">Categorías del Menú de Navegación</h1>
    <div class="row">
      <div class="col-md-12 center-xs ">
        <% @categories.each do |category| %>
        <table class="row center-xs">
            <td class="body-content"><%= category.name %></td> 
            <th>
              <button class="btn-actions">
                <%= link_to category do %>
                    <i class="fa fa-eye tooltip" style="font-size:24px"><span class="tooltiptext">Ver Categoría</span></i></i>
                <% end %>
              </button>
            </th>
            <th>
              <button class="btn-actions">
                <%= link_to edit_category_path(category) do %>
                    <i class="fa fa-pencil tooltip" style="font-size:24px"><span class="tooltiptext">Editar Categoría</span></i></i>
                <% end %>
              </button>
            </th>
            <th>
              <button class="btn-actions">
                <%= link_to category,method: :delete, :data => { :confirm => '¿Estas seguro de eliminar el registro?' } do %>
                    <i class="fa fa-trash tooltip" style="font-size:24px"><span class="tooltiptext">Eliminar Categoría</span></i>
                <% end %>
              </button>
            </th>
          </table> 
        <%end%>
      </div>
    </div>
  </div>
</div>



