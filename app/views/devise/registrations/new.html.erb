<div class="row center-xs">
  <div class="col-xs-8 col-md-6">
        <div class="center-xs">
          <h1>Crear Cuenta</h1>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <div class="field">
              <%= f.label :email , class: "lbl_format"%><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form_control" %>
            </div>

            <div class="field">
              <%= f.label "Contraseña" , class: "lbl_format"%>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> caracteres mínimo)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "off", class: "form_control" %>
            </div>

            <div class="field">
              <%= f.label "Confirmar Contraseña" , class: "lbl_format"%><br />
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form_control" %>
            </div>

            <div class="actions">
              <%= f.submit "Crear", class: "btn-primary"%>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
  </div>
</div>
