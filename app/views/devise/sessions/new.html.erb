<div class="row index-box">
  <div class="col-md-1" style="background: #c2ef6b;"></div>
  <div class="col-md-10">
    <div class="row center-xs">
      <div class="col-md-4">
           <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="row" style="margin-bottom: 10px;">
              <%= f.label :email  , class: "lbl_format", style: "margin: 5px 15px;"%>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form_control", style: " width: 221px;" %>
            </div>

            <div class="row" style="margin-bottom: 10px;">
              <%= f.label :password , class: "lbl_format", style: "margin: 5px 15px;"%>
              <%= f.password_field :password, autocomplete: "off", class: "form_control" %>
            </div>

            <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label "Recordar"  , class: "lbl_format"%>
              </div>
            <% end -%>

            <div class="actions">
              <%= f.submit "Iniciar SesiÃ³n", class: "btn-primary"%>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
  <div class="col-md-1" style="background: #c2ef6b;"></div>
</div>
  

  


